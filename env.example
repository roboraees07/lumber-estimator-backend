# Lumber Estimator Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8003
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///data/lumber_estimator.db

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# File Storage
UPLOAD_DIR=data/lumber_pdf_uploads
OUTPUT_DIR=outputs
TEMP_DIR=temp

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS (comma-separated origins)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8003

# Optional: External Services
# HOME_DEPOT_API_KEY=your_home_depot_api_key
# LOWES_API_KEY=your_lowes_api_key
